<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../layouts/head.ejs') %>
    <link rel="stylesheet" href="../css/home.css">
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body class="pt-5">
      <%- include('../layouts/header.ejs') %>
      <!-- Page Intro Title -->
      <%if (itemdetails) { %>

      <div class="container">

        <div class="row me-0">


          <div class="col-lg-8 col-md-12">

            <div class="bg-light g-0 shadow-sm rounded-3">

<!-- Interaction div -->
              <div class="d-flex bd-highlight p-2">
                <div class="me-auto p-3 bd-highlight">
                  <a href="#previous">
                    <i class="fas fa-chevron-circle-left fa-2x"></i>
                  </a>

                </div>

                <div class="p-3 bd-highlight">
                  <a href="#share">
                    <i class="fas fa-share-alt-square fa-2x"></i>
                  </a>

                </div>

                <div class="p-3 bd-highlight">
                  <a href="#favorite">
                    <i class="far fa-heart fa-2x"></i>
                  </a>

                </div>


              </div>


<!-- Item Title and Into-->
                <div class="row ps-3">

                  <h1><%= itemdetails.title %></h1>
                  <p><%= itemdetails.intro %></p>

                </div>

<!-- Carousel Div -->
                <div id="carouselExampleControlsNoTouching" class="carousel slide mb-4" data-bs-touch="false" data-bs-interval="false">

<!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="../img/4.jpg" width="" class="d-block w-100" alt="">
                          </div>
                          <div class="carousel-item">
                            <img src="../img/4.jpg" class="d-block w-100" alt="">
                          </div>
                          <div class="carousel-item">
                            <img src="../img/4.jpg" class="d-block w-100" alt="">
                          </div>
                        </div>

  <!-- Left and right controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                        <div class="carousel-indicators">
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                </div>



                <div class="row p-3">
<!-- Time of post -->
                  <div class="col-sm-4">
                    <i class="fas fa-clock me-1 text-muted"></i>
                  <!-- Javascript content -->
                  <small class="text-muted">
                    <%= itemdetails.createdAt %>
                  </small>
                  </div>

<!-- Location of post -->
                  <div class="col-sm-4">
                    <i class="fas fa-map-marker-alt me-1 text-muted"></i>
                    <small class="text-muted ">Location</small>
                  </div>
                </div>

<!-- Item Description -->
                  <div class="row p-3">
                  <h5>Description</h5>
                  <p class="text-start">
                  <%= itemdetails.description %>
                  </p>
                  </div>


                  </div>


              </div>


<!-- Call to Action -->
              <div class="col-lg-4 col-md-12 bg-light h-75 p-3 rounded-3">

                  <div class="d-flex justify-content-center py-2">
                    <button type="button" class="btn btn-primary w-75 p-2" name="button">
                      <i class="fas fa-info-circle pe-2"></i>About the poster</button>
                  </div>

                  <div class="d-flex justify-content-center py-2">
                    <button type="button" class="btn btn-outline-primary w-75 p-2" name="button">
                      Chat</button>
                  </div>
              </div>


          </div>

      </div>

      <% } %>

  </body>

    <%- include('../layouts/footer.ejs') %>
</html>
